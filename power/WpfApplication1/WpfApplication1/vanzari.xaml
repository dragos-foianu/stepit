<Window x:Class="WpfApplication1.vanzari"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="vanzari" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="ha"/>
        
        <UniformGrid Grid.Row="2" Rows="1">
            <Button Content="remove" Click="removeB"/>
            <Button Content="add" Click="addB"/>

        </UniformGrid>
             
        <UniformGrid Grid.Row="1" Rows="1">
            <TextBox x:Name="produsID"/>
            <TextBox x:Name="clientID"/>
            <TextBox x:Name="angajatID"/>

        </UniformGrid>

    </Grid>
</Window>
